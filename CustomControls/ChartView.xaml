            <DataTemplate x:Key="Min_Group_6">
                <Border Stroke="Transparent"
                        BackgroundColor="Transparent"
                        WidthRequest="55">

                    <Grid RowDefinitions="*, *, *, *, *, *, Auto"
                          ColumnDefinitions="*">

                        <Grid RowDefinitions="*"
                              ColumnDefinitions="*"
                              x:Name="dot_value_group"
                              TranslationY="{Binding y_adjustment}"
                              VerticalOptions="Center"
                              Grid.Row="0">

                            <Label Text="{Binding weight}" 
                                   x:Name="weight_value_entry_display"                               
                                   HorizontalOptions="Center"
                                   VerticalOptions="End"       
                                   Margin="-20"
                                   FontSize="14" >

                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" 
                                             Binding="{Binding is_current_date}" 
                                             Value="True">

                                        <Setter Property="TextColor"
                                            Value="White" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <Frame x:Name="entry_dot_display"
                                   VerticalOptions="Center"
                                   WidthRequest="5"
                                   HeightRequest="5"
                                   BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Primary}}" />
                        </Grid>

                        <Label Text="{Binding date, StringFormat='{0:M/d/yy}'}" 
                               FontSize="12" 
                               VerticalOptions="End"
                               HorizontalOptions="Center"
                               Grid.Row="6"
                               FontAttributes="Bold">

                            <Label.Triggers>
                                <DataTrigger TargetType="Label" 
                                             Binding="{Binding is_current_date}" 
                                             Value="True">

                                    <Setter Property="TextColor"
                                            Value="White" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Grid>

                    <Border.Triggers>
                        <DataTrigger TargetType="Border"
                                     Binding="{Binding is_current_date}"
                                     Value="True">

                            <Setter Property="BackgroundColor"
                                    Value="LightBlue" />
                        </DataTrigger>

                        <DataTrigger TargetType="Border"
                                     Binding="{Binding is_current_date}"
                                     Value="False">

                            <Setter Property="BackgroundColor"
                                    Value="Transparent" />
                        </DataTrigger>
                    </Border.Triggers>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Source={x:Reference this}, Path=current_date_command}"
                                              CommandParameter="{Binding .}" />
                    </Border.GestureRecognizers>
                </Border>
            </DataTemplate>

