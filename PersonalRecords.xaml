            <DataTemplate x:Key="Is_Weight_PR">
                <SwipeView>
                    <SwipeView.LeftItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem IconImageSource="trash_icon.png"                                       
                                       BackgroundColor="Red"
                                       Clicked="Remove_PR"
                                       BindingContext="{Binding exercise_name}"/>

                        </SwipeItems>
                    </SwipeView.LeftItems>

                    <SwipeView.RightItems>
                        <SwipeItems SwipeBehaviorOnInvoked="Close">
                            <SwipeItem IconImageSource="edit_icon.png"
                                       BackgroundColor="LightBlue"
                                       Clicked="Update_PR"
                                       BindingContext="{Binding exercise_name}"/>

                        </SwipeItems>
                    </SwipeView.RightItems>

                    <Border Margin="5">
                        <Border.Shadow>
                            <Shadow Brush="Black"
                                    Offset="20,20"
                                    Radius="40"
                                    Opacity="1" />
                        </Border.Shadow>

                        <Grid RowDefinitions="*"
                              ColumnDefinitions="50, *, *"
                              VerticalOptions="Center"
                              Margin="10">

                            <Image Grid.Column="0"
                                   WidthRequest="40"
                                   HeightRequest="40"
                                   Source="{AppThemeBinding Light=weight_icon.png, Dark=weight_icon_dark.png}"/>

                            <Label Text="{Binding exercise_name}"
                                   Grid.Column="1"
                                   Padding="10"
                                   VerticalOptions="Center"
                                   FontSize="16" />

                            <Grid Grid.Column="2"
                                  RowDefinitions="*, *"
                                  ColumnDefinitions="*, Auto"
                                  HorizontalOptions="End" >

                                <Label Text="{Binding date_achieved}"
                                       Grid.Row="0"
                                       FontSize="14"
                                       Grid.ColumnSpan="2"
                                       HorizontalOptions="End" />

                                <Label Text="{Binding weight}"
                                       Grid.Row="1"
                                       Grid.Column="0"
                                       FontSize="14"
                                       HorizontalOptions="End" />

                                <Label Text=" lbs."
                                       Grid.Row="1"
                                       Grid.Column="1"
                                       FontSize="14" />
                            </Grid>
                        </Grid>
                    </Border>
                </SwipeView>
            </DataTemplate>

